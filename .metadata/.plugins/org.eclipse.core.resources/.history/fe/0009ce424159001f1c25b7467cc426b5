<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 만든이: 김하겸 -->
<!-- item_id mapper는 사업자(vender)가 등록한 업체에 대한 처리입니다 -->
<mapper namespace="com.reservation.dao.BusnisessPlaceInfoDao">
	<insert id="insertMyBusinessPlaceInfo"
		parameterType="com.reservation.dto.BusnisessPlaceInfoDto">
		INSERT INTO service_items (
		item_id,
		email,
		business_regi_num,
		service_name,
		service_description,
		required_time,
		service_price,
		status
		)
		VALUES (
		item_id.nextval,
		#{email},
		#{business_regi_num},
		#{service_name},
		#{service_description},
		#{required_time},
		#{service_price},
		'1'
		)
	</insert>
	<select id="selectAllMyItems"
		resultType="com.reservation.dto.ServiceItemsDto">

		SELECT *
		FROM service_items
		WHERE email = #{email}
		AND
		business_regi_num = #{business_regi_num}
		ORDER BY item_status DESC,
		item_id;
	</select>
	<select id="selectOneMyItem"
		resultType="com.reservation.dto.ServiceItemsDto">

		SELECT *
		FROM service_items
		WHERE email = #{email}
		AND
		business_regi_num =
		#{business_regi_num}
		And
		item_id =#{item_id}
		ORDER BY item_status DESC,
		item_id;
	</select>

	<update id="updateMyItem" parameterType="int">
		UPDATE service_items
		SET
		service_name = #{service_name},
		service_description =
		#{service_description},
		required_time = #{required_time},
		service_price
		= #{service_price}
		WHERE item_id = #{item_id};
	</update>
	<update id="deleteMyItem" parameterType="int">
		UPDATE service_items
		SET
		item_status = '0'
		WHERE email = #{email}
		AND business_regi_num =
		#{business_regi_num}
		AND item_id = #{item_id};
	</update>
</mapper>