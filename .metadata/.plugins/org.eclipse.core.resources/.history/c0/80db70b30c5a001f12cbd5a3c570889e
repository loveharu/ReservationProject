<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>카카오맵 서비스</title>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript"
	src="//dapi.kakao.com/v2/maps/sdk.js?appkey=c441b3b3b2ef1a8131497b58ac1bae64&libraries=services,clusterer,drawing"></script>
<script>
$(document).ready(function() {
    var mapContainer = document.getElementById('map'), // 지도를 표시할 div
        mapOption = {
            center: new kakao.maps.LatLng(37.4911, 126.7221), // 지도의 중심좌표
            level: 3 // 지도의 확대 레벨
        };

    var map = new kakao.maps.Map(mapContainer, mapOption); // 지도를 생성합니다
    var geocoder = new kakao.maps.services.Geocoder();

    var markerStart = new kakao.maps.Marker(), // 시작 위치를 표시할 마커입니다
        markerEnd = new kakao.maps.Marker(), // 도착 위치를 표시할 마커입니다
        infowindow = new kakao.maps.InfoWindow({ zindex: 1 });

    var startPoint = null;
    var endPoint = null;

    // 지도를 클릭했을 때 클릭 위치에 마커를 표시하고 출발점/도착점을 설정합니다
    kakao.maps.event.addListener(map, 'click', function(mouseEvent) {
        var latlng = mouseEvent.latLng;

        if (!startPoint) {
            startPoint = latlng;
            markerStart.setPosition(latlng);
            markerStart.setMap(map);
            infowindow.setContent('출발지');
            infowindow.open(map, markerStart);
        } else if (!endPoint) {
            endPoint = latlng;
            markerEnd.setPosition(latlng);
            markerEnd.setMap(map);
            infowindow.setContent('도착지');
            infowindow.open(map, markerEnd);
            calculateRoute(); // 출발지와 도착지가 모두 설정되었으면 경로 계산
        }
    });

    // 두 지점 사이의 최단 경로를 계산하고 표시합니다
    function calculateRoute() {
        var directionsService = new kakao.maps.services.Directions();

        var startLatLng = new kakao.maps.LatLng(startPoint.getLat(), startPoint.getLng());
        var endLatLng = new kakao.maps.LatLng(endPoint.getLat(), endPoint.getLng());

        var waypoints = [
            { location: startLatLng },
            { location: endLatLng }
        ];

        directionsService.route({
            origin: startLatLng,
            destination: endLatLng,
            waypoints: waypoints,
            travelMode: kakao.maps.services.TravelMode.DRIVING
        }, function(result, status) {
            if (status === kakao.maps.services.Status.OK) {
                var path = result.routes[0].overview_path;

                var polyline = new kakao.maps.Polyline({
                    path: path,
                    strokeWeight: 5,
                    strokeColor: '#FF0000',
                    strokeOpacity: 0.7,
                    strokeStyle: 'solid'
                });

                polyline.setMap(map); // 경로를 지도에 표시합니다
            } else {
                alert('경로를 찾을 수 없습니다.');
            }
        });
    }

    // 길찾기 버튼 클릭 시 카카오맵 길찾기 서비스로 이동
    $("#searchRouteButton").click(function() {
        var startX = startPoint ? startPoint.getLng() : 126.9780; // 시작 위치 경도
        var startY = startPoint ? startPoint.getLat() : 37.5665; // 시작 위치 위도
        var endX = endPoint ? endPoint.getLng() : 127.0276; // 도착 위치 경도
        var endY = endPoint ? endPoint.getLat() : 37.4979; // 도착 위치 위도
        var url = `https://map.kakao.com/link/to/도착지,${endY},${endX},from/${startY},${startX}`;
        window.open(url, '_blank');
    });

    // 현재 위치를 지도에 표시합니다
    function showCurrentLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                var lat = position.coords.latitude;
                var lng = position.coords.longitude;
                var locPosition = new kakao.maps.LatLng(lat, lng);

                map.setCenter(locPosition);
            });
        } else {
            alert('현재 위치를 찾을 수 없습니다.');
        }
    }

    showCurrentLocation();
});

</script>
</head>
<body>
	<header>
		<h1>카카오맵 서비스</h1>
	</header>
	<div id="map" style="width: 100%; height: 400px;"></div>
	<button id="searchRouteButton">길찾기</button>
	<!-- 길찾기 버튼 -->
</body>
</html>